{
  "name": "ecommerce101-1",
  "version": "1.0.0",
  "engines": {
    "node": "16.x"
  },
  "description": "Small fullstack single-page ecommerce application for learning purposes.",
  "private": true,
  "homepage": "https://elchamuyin.onrender.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Maxioliva/Ecommerce101.git"
